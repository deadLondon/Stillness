    @model Stillness.Models.UserPictureViewModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var picture = Model.Pictures.FirstOrDefault();
}


@if (picture != null)
{
    <div class="container d-flex justify-content-center align-items-center my-4">
        <div class="card bg-dark mb-3 d-flex flex-column flex-md-row" style="max-width: 800px; width: 100%;">
            <div style="flex: 0 0 33.3333%; overflow: hidden; min-height: 250px;">
                <a asp-action="DownloadPicture" asp-route-pic="@picture.Filepath" download>
                    <img src="~/@picture.Filepath" alt="picture"
                         style="width: 100%; height: 100%; object-fit: cover; display: block;" />
                </a>
            </div>
            <div style="flex: 1 1 66.6667%; padding: 1rem; color: white;">
                <div class="card-body d-flex flex-column justify-content-between h-100 p-0">
                    <div>
                        <h5 class="card-title d-flex align-items-center mb-3">
                            <img src="data:image/png;base64,@Model.User.Avatar" alt=""
                                 style="height:20px; margin-right:5px" class="rounded-circle" />
                            @Model.User.Nickname
                        </h5>
                        <p class="card-text">@picture.Description</p>
                    </div>
                    <div>
                        <p class="card-text"><small class="text-body-secondary">Uploaded at: @picture.CreatedAt.ToString("d")</small></p>
                        <p class="card-text" style="font-size: 0.7rem; color: #bbb;">Click to download picture!</p>
                    </div>
                </div>
            </div>

        </div>
    </div>
}
else
{
    <p>No picture found.</p>
}